# Compatible .env file for javascript dotenv AND docker-compose --env-file
# PORT=3000

# Application Configuration
NODE_ENV=development

# Authentication Configuration
# Set to 'oauth2' to enable Azure AD authentication, leave empty or unset to disable authentication
AUTH_METHOD=
SESSION_SECRET=your-very-secure-session-secret-change-this-in-production

# Azure AD OAuth2 Configuration (only needed if AUTH_METHOD=oauth2)
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_CLIENT_ID=your-azure-application-client-id
AZURE_CLIENT_SECRET=your-azure-application-client-secret
AZURE_REDIRECT_URL=http://localhost:3000/auth/callback

# Modules
# MODULES='tcm,gastric_cancer,gastric_tme,bcell_lc'
MODULES='tcm'

# Database - General
DB_HOST=
DB_USER=
DB_PASSWORD=
DB_CONN_LIMIT=100

# Database - TCellMap
DB_HOST_TCM=
DB_USER_TCM=
DB_PASSWORD_TCM=
DB_DATABASE_TCM=

# Database - GastricCancer
DB_HOST_GASTRIC=
DB_USER_GASTRIC=
DB_PASSWORD_GASTRIC=
DB_DATABASE_GASTRIC=

# Database - GastricTME
DB_HOST_GASTRICTME=
DB_USER_GASTRICTME=
DB_PASSWORD_GASTRICTME=
DB_DATABASE_GASTRICTME=

# Database - BCell
DB_HOST_BCM=
DB_USER_BCM=
DB_PASSWORD_BCM=
DB_DATABASE_BCM=


# SSL OPTIONS
# SSL_ENABLED=false
# SSL_KEY=<key_file>.key
# SSL_CERT=<cert>.cer
# SSL_CA=<cert_interm>.cer
# SSL_PASSPHRASE=<passphrase>



