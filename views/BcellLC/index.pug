extends layout

block content
  #wrapper
    // Sidebar
    include sidebar.jade
    // Content Wrapper
    #content-wrapper.d-flex.flex-column
      // Main Content
      #content
        // Topbar
        include header.jade
        // Begin Page Content
        .container-fluid
          // Page Heading
          div Citation: 
            a(href="https://aacrjournals.org/cancerdiscovery/article/12/11/2626/709999/The-Single-Cell-Immunogenomic-Landscape-of-B-and") Hao, D. Han, G. Sinjab, A. Gomez-Bolanos, L. I. Lazcano, R. Serrano, A. Hernandez, S. D. Dai, E. Cao, X. Hu, J. Dang, M. Wang, R. Chu, Y. Song, X. Zhang, J. Parra, E. R. Wargo, J. A. Swisher, S. G. Cascone, T. Sepesi, B. Futreal, A. P. Li, M. Dubinett, S. M. Fujimoto, J. Solis Soto, L. M. Wistuba,, II Stevenson, C. S. Spira, A. Shalapour, S. Kadara, H. Wang, L. The single-cell immunogenomic landscape of B and plasma cells in early-stage lung adenocarcinoma. Cancer discovery 12, no. 11 (2022): 2626-2645.
          p
          h1.h3.mb-0.text-gray-800 Overview
          // Content Row
          .row
            .col-xl-2.col-md-6.mb-4
              .card.background-one.foreground-one.shadow.h-100.py-2
                .card-body.noar
                  .row.no-gutters.align-items-center
                    .col.mr-2
                      .text-xs.font-weight-bold.text-uppercase.mb-1
                        | Cells:
                      .h5.mb-0.font-weight-bold 49,062
                    .col-auto
                      span.icon-stack
                        i.fas.fa-solid.fa-circle.icon-stack-1x.fa-2x.text-gray-300
                        i.fas.fa-solid.fa-circle.icon-stack-2x.fa-1x.text-gray-500
            .col-xl-2.col-md-6.mb-4
              .card.background-two.foreground-one.shadow.h-100.py-2
                .card-body.noar
                  .row.no-gutters.align-items-center
                    .col.mr-2
                      .text-xs.font-weight-bold.text-uppercase.mb-1
                        | Samples:
                      .h5.mb-0.font-weight-bold 63
                    .col-auto
                      i.fas.fa-vial.fa-2x.text-gray-300
            .col-xl-2.col-md-6.mb-4
              .card.background-three.foreground-one.shadow.h-100.py-2
                .card-body.noar
                  .row.no-gutters.align-items-center
                    .col.mr-2
                      .text-xs.font-weight-bold.text-uppercase.mb-1
                        | Subjects:
                      .h5.mb-0.font-weight-bold 16
                    .col-auto
                      i.fas.fa-hospital-user.fa-2x.text-gray-300
            .col-xl-2.col-md-6.mb-4
              .card.background-four.foreground-one.shadow.h-100.py-2
                .card-body.noar
                  .row.no-gutters.align-items-center
                    .col.mr-2
                      .text-xs.font-weight-bold.text-uppercase.mb-1
                        | Organs:
                      .h5.mb-0.font-weight-bold 1
                    .col-auto
                      i.fas.fa-lungs.fa-2x.text-gray-300
            .col-xl-2.col-md-6.mb-4
              .card.background-five.foreground-one.shadow.h-100.py-2
                .card-body.noar
                  .row.no-gutters.align-items-center
                    .col.mr-2
                      .text-xs.font-weight-bold.text-uppercase.mb-1
                        | Cancer types:
                      .h5.mb-0.font-weight-bold 1
                    .col-auto
                      i.fas.fa-disease.fa-2x.text-gray-300


          img(src="/BcellLC/img/Figure-1A.svg", alt="Overview figure", height = "100%", style="padding:1em;margin:2em 0 2em 0;", width = "100%")

          // Content Row

          .row
            // Area Chart
            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Cell composition (distant)
                // Card Body
                .card-body
                  .chart-pie
                    canvas#CellFractionDistantBar

            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Cell composition (intermediate)
                // Card Body
                .card-body
                  .chart-pie
                    canvas#CellFractionIntermediateBar

          .row
            // Area Chart
            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Cell composition (adjacent)
                // Card Body
                .card-body
                  .chart-pie
                    canvas#CellFractionAdjacentBar
            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Cell composition (tumor)
                // Card Body
                .card-body
                  .chart-pie
                    canvas#CellFractionTumorBar
          .row
            .col-xl-4.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Tissue composition
                // Card Body
                .card-body
                  .chart-pie
                    canvas#TissueComp
            // Pie Chart
            .col-xl-4.col-lg-5
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Pathology composition
                // Card Body
                .card-body
                  .chart-pie.pt-4.pb-2
                    canvas#PathoComp
            .col-xl-4.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold From samples with Driver mutations
                // Card Body
                .card-body
                  .chart-pie
                    canvas#DriverComp
          .row
            .col-xl-4.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Smoking history
                // Card Body
                .card-body
                  .chart-pie
                    canvas#SmokingComp
            .col-xl-4.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold B cell subtype
                // Card Body
                .card-body
                  .chart-pie
                    canvas#SubtypeComp
            .col-xl-4.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Sex and Age
                // Card Body
                .card-body
                  .chart-pie
                    canvas#SAComp

          //- .row
          //-   .col-xl-4.col-lg-7
          //-     .card.shadow.mb-4
          //-       .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
          //-         h6.m-0.font-weight-bold citation:
          //-       .card-body
          //-         p Hao, D. Han, G. Sinjab, A. Gomez-Bolanos, L. I. Lazcano, R. Serrano, A. Hernandez, S. D. Dai, E. Cao, X. Hu, J. Dang, M. Wang, R. Chu, Y. Song, X. Zhang, J. Parra, E. R. Wargo, J. A. Swisher, S. G. Cascone, T. Sepesi, B. Futreal, A. P. Li, M. Dubinett, S. M. Fujimoto, J. Solis Soto, L. M. Wistuba,, II Stevenson, C. S. Spira, A. Shalapour, S. Kadara, H. Wang, L. (2022). The Single-Cell Immunogenomic Landscape of B and Plasma Cells in Early-Stage Lung Adenocarcinoma. Cancer discovery, 12(11), 2626-2645.
        // /.container-fluid
        // End of Main Content
        // Footer
        include footer.jade
        a.scroll-to-top.rounded(onClick="document.documentElement.scrollIntoView({ behavior: 'smooth' });")
          i.fas.fa-angle-up

