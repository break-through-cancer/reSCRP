  script(src='/BcellLC/javascripts/chart/chart-cell-fraction-adjacent-bar.js')
  script(src='/BcellLC/javascripts/chart/chart-cell-fraction-tumor-bar.js')

  script(src='/BcellLC/javascripts/chart/chart-tissue-composition-pie.js')
