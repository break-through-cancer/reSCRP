extends layout

block content
  #wrapper
    // Sidebar
    include sidebar.pug
    #content-wrapper.d-flex.flex-column
      // Main Content
      #content
        // Topbar
        include header.pug
        // Begin Page Content
        .container-fluid
          // Page Heading
          p
            h1.h3.mb-0.text-gray-800 Embedding
          form#selection
            label(for='field-select') Choose a tissue type:
            select#field-select(name='fieldoptions')
              option(value='ALL') --All--
              option(value='tumor') Tumor
              option(value='intermediate') Intermediate
              option(value='distant') Distant
              option(value='adjacent') Adjacent
            label(for='gender-select', style="margin-left:10px;") Choose a gender type:
            select#gender-select(name='gendertypeoption')
              option(value='ALL') --All--
              option(value='Female') Female
              option(value='Male') Male
            label(for='stage-select', style="margin-left:10px;") Choose a stage:
            select#stage-select(name='stagetypeoption')
              option(value='ALL') --All--
              option(value='IIA') IIA
              option(value='IB') IB
              option(value='IIIA') IIIA
              option(value='IB (cN0)') IB (cN0)
              option(value='IB') IIB
              option(value='IA3') IA3
            label(for='smoking-select', style="margin-left:10px;") Choose a smoking status:
            select#smoking-select(name='smokingtypeoption')
              option(value='ALL') --All--
              option(value='never smoker') Never smoker
              option(value='smoker') Smoker
            label(for='mut-select', style="margin-left:10px;") Choose a driver gene:
            select#mut-select(name='mutoption')
              option(value='ALL') --All--
              option(value='KRAS') KRAS
              option(value='EGFR') EGFR
              option(value='Other') Other
            input#submitbutton.SubmitButton(type="submit",name="SUBMITBUTTON",value="Submit",style="margin-left:10px;")
          hr
          .row
            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Cell type/state
                .card-body#imgCellType(style="min-height: 200px;")
                  .lds-dual-ring.hidden.overlay#loader1
            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Tissue Type
                .card-body#imgFieldType(style="min-height: 200px;")
                  .lds-dual-ring.hidden.overlay#loader2
          .row
            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Gender
                .card-body#imgGenderType(style="min-height: 200px;")
                  .lds-dual-ring.hidden.overlay#loader3
            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Pathological stage or stage
                .card-body#imgStageType(style="min-height: 200px;")
                  .lds-dual-ring.hidden.overlay#loader4
          .row
            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Smoking status
                .card-body#imgSmokingType(style="min-height: 200px;")
                  .lds-dual-ring.hidden.overlay#loader5

            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Driver gene mutation
                .card-body#imgMutType(style="min-height: 200px;")
                  .lds-dual-ring.hidden.overlay#loader6

          script(src='/BcellLC/javascripts/embedding_query.js')
        include footer.pug
        a.scroll-to-top.rounded(onClick="document.documentElement.scrollIntoView({ behavior: 'smooth' });")
          i.fas.fa-angle-up

  script(src='/assets/vendor/bootstrap2/js/bootstrap.bundle.min.js')
  script(src='/assets/vendor/jquery-easing/jquery.easing.min.js')
  script(src='/BcellLC/javascripts/sb-admin-2.min.js')
