extends layout

block content
  #wrapper
    // Sidebar
    include sidebar.jade
    #content-wrapper.d-flex.flex-column
      #content
        // Topbar
        include header.jade
        // Begin Page Content
        .container-fluid
          // Page Heading
          //- .d-sm-flex.align-items-center.justify-content-between.mb-4
          p
            h1.h3.mb-0.text-gray-800 Expression

          form#selection
            label(for='field-select') Choose a tissue type:
            select#field-select(name='fieldoptions')
              option(value='ALL') --All--
              option(value='tumor') Tumor
              option(value='intermediate') Intermediate
              option(value='distant') Distant
              option(value='adjacent') Adjacent
            label(for='gender-select', style="margin-left:10px;") Choose a gender type:
            select#gender-select(name='gendertypeoption')
              option(value='ALL') --All--
              option(value='Female') Female
              option(value='Male') Male
            label(for='stage-select', style="margin-left:10px;") Choose a stage:
            select#stage-select(name='stagetypeoption')
              option(value='ALL') --All--
              option(value='IIA') IIA
              option(value='IB') IB
              option(value='IIIA') IIIA
              option(value='IB (cN0)') IB (cN0)
              option(value='IB') IIB
              option(value='IA3') IA3
            label(for='smoking-select', style="margin-left:10px;") Choose a smoking status:
            select#smoking-select(name='smokingtypeoption')
              option(value='ALL') --All--
              option(value='never smoker') Never smoker
              option(value='smoker') Smoker
            label(for='mut-select', style="margin-left:10px;") Choose a driver gene:
            select#mut-select(name='mutoption')
              option(value='ALL') --All--
              option(value='KRAS') KRAS
              option(value='EGFR') EGFR
              option(value='Other') Other
            br
            label Markers input
            textarea#markers-input(rows="1", cols="10",style="margin-left:10px")
            input#submitbutton.SubmitButton(type="submit",name="SUBMITBUTTON",value="Submit",style="margin-left:10px;")
          hr
          // Content Row
          .row
            // Area Chart
            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Expression distribution
                // Card Body
                .card-body#imgBubblePlot(style="min-height: 200px;")
                  .lds-dual-ring.hidden.overlay#loader1
            .col-xl-6.col-lg-7
              .card.shadow.mb-4
                // Card Header - Dropdown
                .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                  h6.m-0.font-weight-bold Spearman correlation of markers' expression
                // Card Body
                .card-body#imgHeatmapPlot(style="min-height: 200px;")
                  .lds-dual-ring.hidden.overlay#loader2

          script(src='/BcellLC/javascripts/expression_query.js')
        include footer.jade
        a.scroll-to-top.rounded(onClick="document.documentElement.scrollIntoView({ behavior: 'smooth' });")
          i.fas.fa-angle-up

  script(src='/assets/vendor/bootstrap2/js/bootstrap.bundle.min.js')
  script(src='/assets/vendor/jquery-easing/jquery.easing.min.js')
  script(src='/BcellLC/javascripts/sb-admin-2.min.js')
